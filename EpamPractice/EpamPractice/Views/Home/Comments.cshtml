@model CodeFirst.Models.User

@{
    ViewBag.Title = "Comments";
}

<div class="text-center mt-3"><h2>Гостевая</h2></div>





<div class="container-fluid">
    <div class="row">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <div class="form-group">
                <label for="exampleInputPassword1">Your name:</label>
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="exampleInputPassword1">Title:</label>
                @Html.TextBoxFor(model => model.TitleOfComment, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TitleOfComment, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="exampleInputPassword1">Comment:</label>
                @Html.TextAreaFor(model => model.Comment, new { @class = "form-control" })
            </div>

            <div class="myClassInputB">
                <input type="submit" class="btn btn-primary mb-3" name="Send" value="Отправить" />
            </div>
        }
    </div>
</div>




