
@{
    ViewBag.Title = "Comments";
}

<div class="text-center mt-3"><h2>Гостевая</h2></div>


    <div class="container">
        <div class="row">
            
                @foreach (var item in Model)
                {
                    <div class="card border-primary mb-3 ml-5 mt-3" style="max-width: 20rem; min-width: 320px;">
                        <div class="card-header">@item.Name</div>
                        <div class="card-body">
                            <h4 class="card-title">@item.TitleOfComment</h4>
                            <p class="card-text">@item.Comment</p>
                        </div>
                        <div class="card-footer text-muted">

                            @if (@item.Date.DayOfYear == DateTime.Now.DayOfYear)
                            {
                                <h6>Today</h6>
                            }
                            else
                            {
                                int dateOfAdd = @item.Date.DayOfYear;
                                int dateToday = DateTime.Now.DayOfYear;
                                int result = (dateToday - dateOfAdd);
                                <h6>@result days ago</h6>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>


<div class="container-fluid">
    <div class="row">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <div class="form-group">
                <label for="exampleInputPassword1">Your name:</label>
                @Html.TextBox("name", "", new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="exampleInputPassword1">Title:</label>
                @Html.TextBox("title", "", new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="exampleInputPassword1">Comment:</label>
                @Html.TextArea("comment", "", new { @class = "form-control" })
            </div>

            <div class="myClassInputB">
                <input type="submit" class="btn btn-primary mb-3" name="Send" value="Отправить" />
            </div>
        }
    </div>
</div>




