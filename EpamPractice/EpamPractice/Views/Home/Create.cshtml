@model CodeFirst.Models.Article

@{
    ViewBag.Title = "Create";
}

<div class="text-center mt-3"><h2>Создать статью</h2></div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="col-md-2">Название статьи</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.NameOfNews, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NameOfNews, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2">Заголовок</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Special, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Special, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2">Подзаголовок</label>
        <div class="col-md-10 ">
            @Html.EditorFor(model => model.Subtitle, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Subtitle, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2">Ссылка на фотографию</label>
        <div class="col-md-10 ">
            @Html.EditorFor(model => model.Link, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Link, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2">Комментарий</label>
        <div class="col-md-10 ">
            @Html.TextAreaFor(model => model.Content, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2">Выберите тег</label>
        <div class="col-md-10 ">
            @Html.DropDownListFor(m => m.Id, ViewBag.Tags as SelectList, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Создать" class="btn btn-warning" />
        </div>
    </div>
</div>
        }

<div class="text-center mb-3"> @Html.ActionLink("Назад", "index")</div>
