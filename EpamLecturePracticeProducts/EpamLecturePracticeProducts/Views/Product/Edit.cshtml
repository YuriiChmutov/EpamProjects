@model Entity.DLL.Entities.Book

@{
    ViewBag.Title = "Edit";
}
<h2 class="text-center">Edit</h2>




@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        <label class="text-center">Name of book</label>
        <div>
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <label class="text-center">Author</label>
        <div>
            @Html.EditorFor(model => model.Author, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <label>Description</label>
        <div>
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <label>Price</label>
        <div>
            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <label>Price</label>
        <div class="text-center">
            @Html.DropDownListFor(model => model.GanreId, ViewBag.Ganres2 as SelectList, new { @class = "form-control "  })
        </div>
    </div>

    <button type="submit" class="btn btn-dark">Submit</button>

}

@Html.ActionLink("Back", "ShowAll")