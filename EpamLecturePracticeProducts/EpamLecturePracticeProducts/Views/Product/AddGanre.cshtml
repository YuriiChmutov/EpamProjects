@model Entity.DLL.Entities.Ganre

@{
    ViewBag.Title = "AddGanre";
}

<h2 class="text-center">Add new ganre</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="form-group">
        <label class="text-center">Title of ganre</label>
        <div>
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            <div class="" style="color: red">@Html.ValidationMessageFor(model => model.Title)</div>
        </div>
    </div>

    <div class="form-group">
        <label class="text-center">Description</label>
        <div>
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Description)
        </div>
    </div>

    




    <button type="submit" class="btn btn-success">Add</button>

}

