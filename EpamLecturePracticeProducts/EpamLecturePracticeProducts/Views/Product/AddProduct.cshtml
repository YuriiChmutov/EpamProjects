@using EpamLecturePracticeProducts.Models
@model Entity.DLL.Entities.Book
@{
    ViewBag.Title = "AddProduct";
}

<h2 class="text-center">Add new book</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="form-group">
        <label class="text-center">Name of book</label>
        <div>
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            <div class="text-danger">@Html.ValidationMessageFor(m => m.Title)</div>
        </div>
    </div>

    <div class="form-group">
        <label class="text-center">Author</label>
        <div>
            @Html.EditorFor(model => model.Author, new { htmlAttributes = new { @class = "form-control" } })
            <div class="text-danger">@Html.ValidationMessageFor(m => m.Author)</div>
        </div>
    </div>

    <div class="form-group">
        <label>Description</label>
        <div>
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
            <div class="text-danger">@Html.ValidationMessageFor(m => m.Description)</div>
        </div>
    </div>

    <div class="form-group">
        <label>Price</label>
        <div>
            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
            @*<input class="form-control" name="Price" pattern="^\d+(\.|\,)\d{2}$">*@
            <div class="text-danger"> @Html.ValidationMessageFor(m => m.Price)</div>
        </div>
    </div>


    <div class="form-group">
        <label>Year</label>
        <div>
            @*@Html.EditorFor(model => model.Year, new { htmlAttributes = new { @class = "form-control" } })*@
            <input class="form-control" name="Year" pattern="^\d+(\.|\,)\d{2}$">
            <div class="text-danger">@Html.ValidationMessageFor(m => m.Year)</div>
        </div>
    </div>

    <div class="form-group">
        <label>Ganre</label>
        <div>
            @Html.DropDownListFor(model => model.GanreId, ViewBag.Ganres as SelectList, new { @class = "form-control" })
        </div>
    </div>




    <button type="submit" class="btn btn-success">Add this book</button>

}


