<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/Site.css")
    @Styles.Render("~/Content/css")


</head>
<body>
    <header>
        <div class="container-fluid">
            <div class="row">
                <a name="top"> </a>
                <div class="col-lg-2 col-md-2 col-sm-2 col-2 col-xl-2">
                    <a class="navbar-brand" href="../Home">
                        <img src="../../Content/images/koala-logo.png" alt="">
                    </a>
                </div>
                <div class="col-lg-10 col-md-10 col-sm-10 col-10 col-xl-10 text-center">
                    <h1>Блог о путешествиях</h1>
                </div>
            </div>
        </div>
    </header>

    <div class="myClass">
        <div class="container-fluid">
            <div class="row">

                <div class="col-9" style="min-height: 500px">
                    @RenderBody()
                </div>


                <div class="col-3 ">


                    <nav class="navbar bg-warning navbar-light ">

                        <!-- Links -->
                        <ul class="navbar-nav ">
                            <li class="nav-item">
                                <a class="nav-link" href="../../Home/Index">Главная</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="../../Users/Index">Гостевая</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="../../Home/ProfileShow">Анкета</a>
                            </li>

                        </ul>
                    </nav>


                    @RenderSection("menu", false)

                    


                </div>
                </div>
        </div>
    </div>

    

    <div class="container-fluid bg-info">

        <footer>
            <div class="row">
                <p class="col-lg-10 col-md-10 col-sm-10 col-10 col-xl-10">&copy; @DateTime.Now.Year - Yurii Chmutov</p>
                <a class="col-2" href="#top">
                    <img src="../../Content/images/arrow-up-icon.png" alt="">
                </a>
            </div>
        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

