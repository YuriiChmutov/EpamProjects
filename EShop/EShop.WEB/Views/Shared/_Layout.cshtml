<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - EShop</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/inputmask")
    @Scripts.Render("~/Content/font-awesome")

    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="~/Home/Index"><img src="~/Content/Images/Logos/Logo-120-cropped.png" /></a>
        <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="navbar-collapse collapse" id="navbarColor03" style="">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="~/Home/Index">Главная <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Product/Index">Товары</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Product/Create">Создать</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">О нас</a>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0 col-6">
                <input class="form-control mr-sm-2 col-12 col-sm-12 col-md-10 col-lg-8 col-xl-8" type="text" placeholder="Я ищу... (Например, Телефон)">
                <button class="btn btn-secondary my-2 my-sm-0 " type="submit">Искать</button>
            </form>
            @Html.Action("Summary", "Cart")
        </div>
    </nav>

    @RenderSection("saved", false)
    @RenderSection("create", false)
    @RenderSection("delete", false)

    <div class="container body-content">
        @RenderBody()
        @*<hr />*@

    </div>

