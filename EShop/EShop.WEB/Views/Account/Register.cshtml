@model EShop.WEB.Models.RegisterModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Регистрация</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/inputmask")
    @Scripts.Render("~/Content/font-awesome")

    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/Registration.css" />
   
</head>

<body>

    <div id="login">
        
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="" method="post">
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <h3 class="text-center text-info">Регистрация</h3>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "text-info" })
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-12" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "text-info" })

                                @Html.TextBoxFor(model => model.Password, new { @class = "form-control col-12", @type = "password" } )
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Age, htmlAttributes: new { @class = "text-info" })
                                @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control col-12" } })
                                @Html.ValidationMessageFor(model => model.Age, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <input type="submit" name="submit" class="btn btn-info btn-md mt-3" value="Зарегестрироваться">
                            </div>
                                <div id="register-link" class="mt-3">
                                    @Html.ActionLink("Уже есть аккаунт?", "Login", null, new { @class = "text-info" })
                                    @*<a href="" class="text-info">Уже есть аккаунт?</a>*@
                                </div>
</form>
                    </div>
                </div>
            </div>
        </div>
    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    
</body>

</html>


