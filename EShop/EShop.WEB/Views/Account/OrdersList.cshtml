@model IEnumerable<EShop.DAL.Entities.Order>

@{
    ViewBag.Title = "Мои заказы";
}
    
        <h2>Список моих заказов</h2>

        <div class="panel panel-default">

            <div class="panel-heading mb-3 ml-3 ">

            </div>
            <div class="panel-body">
                <table class="table table-striped table-condensed table-bordered">
                    <tr>
                        <th class="text-center ">
                            <span>Номер</span>
                        </th>
                        <th>
                            <span>Заказ</span>
                        </th>
                        <th>
                            <span>Время</span>
                        </th>


                    </tr>
                    @{int i = 1;}
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">@i</td>
                            <td class="">@item.Value</td>
                            <td class=""> @item.Date</td>

                        </tr>
                        i++;
                    }
                </table>
            </div>

        </div>
        @using (Html.BeginForm())
        {
            <input type="submit" value="Очистить" class="btn btn-danger mr-2" />
        }
    