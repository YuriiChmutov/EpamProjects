@model EShop.DAL.Entities.Picture

@{
    ViewBag.Title = "CreatePicture";
}

<h2>CreatePicture</h2>

@using (Html.BeginForm("CreatePicture", "Administration", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Добавить изображение</legend>

        <div class="editor-label">Название</div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PictureName)
            @Html.ValidationMessageFor(model => model.PictureName)
        </div>

        <div class="editor-label">Файл изображения</div>
        <div class="editor-field">
            <input type="file" name="uploadImage" />
        </div>

        <p>
            <input type="submit" value="Добавить" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Вернуться к списку", "IndexPicture")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}