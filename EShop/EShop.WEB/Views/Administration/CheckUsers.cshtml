@model IEnumerable<EShop.DAL.Entities.User>

@{
    ViewBag.Title = "Пользователи";
}




    <div class="container-fluid">
        
        <h3 class="row">

            @Html.ActionLink("Все товары", "Index", "Administration", new { @class = "col-xl-3 col-lg-6 col-md-12 col-sm-12 col-12" })
            <span class="col-xl-3 col-lg-6 col-md-12 col-sm-12 col-12">Пользователи</span>
            @Html.ActionLink("Список заказов", "ListOfOrders", "Administration", new { @class = "col-xl-3 col-lg-6 col-md-12 col-sm-12 col-12" })

            @Html.ActionLink("Журнал ошибок", "ExceptionsInfo", "Administration", new { @class = "col-xl-3 col-lg-6 col-md-12 col-sm-12 col-12" })

        </h3>
        
    </div>
<div class="col-lg-12 col-xl-12 col-md-12 col-sm-12 col-12 mb-3">

    @using (Html.BeginForm())
    {
        <div class="row">
            <input id="SearchString" class="ml-3 form-control col-xl-9 col-lg-9 col-md-9 col-sm-12 col-12"
                   name="SearchUser" placeholder="Имя или возраст" type="text" />
            <input class="ml-3 mt-sm-3 mt-3 mt-md-0 mt-lf-0 mt-xl-0 col-xl-2 col-lg-2 col-md-2 col-sm-4 col-7 form-control btn-dark"
                   type="submit" value="Искать" />
        </div>
    }

</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            <span>Возраст</span>
        </th>
        <th class="text-center">
            <span>Что сделать</span>
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>

            <td class="text-center">

                @if (item.RoleId == 2)
                {
                    @*<input type="submit" id="@item.RoleId" name="@item.RoleId" value="Забанить" class="btn btn-outline-danger">*@
                    @Html.ActionLink("Забанить", "ChangeUsers", new { id = item.Id }, new { @class = "btn btn-outline-danger mr-2" })
                }
                @if (item.RoleId == 3)
                {
                    @*<input type="submit" id="@item.RoleId" name="@item.RoleId" value="Разбанить" class="btn btn-outline-warning">*@
                    @Html.ActionLink("Разбанить", "ChangeUsers", new { id = item.Id }, new { @class = "btn btn-defaul btn-outline-warning" })
                }

            </td>
        </tr>
    }

</table>
