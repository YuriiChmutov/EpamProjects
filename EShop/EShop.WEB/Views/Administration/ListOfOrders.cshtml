@model IEnumerable<EShop.DAL.Entities.Order>
@using EShop.WEB.Models
@{
    ViewBag.Title = "Заказы";
}




<div class="container-fluid">

    <h3 class="row">

        @Html.ActionLink("Все товары", "Index", "Administration", new { @class = "col-xl-3 col-lg-6 col-md-12 col-sm-12 col-12" })
        @Html.ActionLink("Пользователи", "CheckUsers", "Administration", new { @class = "col-xl-3 col-lg-6 col-md-12 col-sm-12 col-12" })
        <span class="col-xl-3 col-lg-6 col-md-12 col-sm-12 col-12">Список заказов</span>

        @Html.ActionLink("Журнал ошибок", "ExceptionsInfo", "Administration", new { @class = "col-xl-3 col-lg-6 col-md-12 col-sm-12 col-12" })

    </h3>

</div>

<div class="col-lg-12 col-xl-12 col-md-12 col-sm-12 col-12 mb-3">

    @using (Html.BeginForm())
    {
        <div class="row">
            <input id="SearchString" class="ml-3 form-control col-xl-9 col-lg-9 col-md-9 col-sm-12 col-12"
                   name="userName" placeholder="Имя пользователя" type="text" />
            <input class="ml-3 mt-sm-3 mt-3 mt-md-0 mt-lf-0 mt-xl-0 col-xl-2 col-lg-2 col-md-2 col-sm-4 col-7 form-control btn-dark"
                   type="submit" value="Искать" />
        </div>
    }

</div>

<div class="panel panel-default">

    <div class="panel-heading mb-3 ml-3 ">

    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-center ">
                    <span>Номер</span>
                </th>
                <th>
                    <span>Имя</span>
                </th>
                <th>
                    <span>Заказ</span>
                </th>

                <th>
                    <span>Время</span>
                </th>
                <th>
                    <span>Статус</span>
                </th>
                <th>
                    <span>Изменить</span>
                </th>

            </tr>
            @{int i = 1;}
            @foreach (var item in Model)
            {
        <tr>
            <td class="text-center">@i</td>
            <td class="text-center">@item.User.Email</td>
            <td class="">@item.Value</td>
            <td class=""> @item.Date</td>
            <td class=""> @item.Status</td>

            <td class="text-center">
                @if (item.Status == "Зарегестрирован")
                {
                    @Html.ActionLink("Изменить", "EditOrder", new { id = item.Id }, new { @class = "btn btn-outline-info" })
                }
                @if (item.Status == "Отменен")
                {
                    @Html.ActionLink("Изменить", "EditOrder", new { id = item.Id }, new { @class = "btn btn-outline-warning" })
                }
                @if (item.Status == "Оплачен")
                {
                    @Html.ActionLink("Изменить", "EditOrder", new { id = item.Id }, new { @class = "btn btn-outline-success" })
                }
            </td>
        </tr>
                i++;
            }
        </table>
    </div>

</div>



