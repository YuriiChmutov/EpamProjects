<div class="jumbotron mt-5">
    <h2 class="text-primary "><a name="leaders"> Рекомендуем </a></h2>
    
    @helper printLeaders(string name, string path, string description, int ID)
    {
        <div class="col-sm-6 col-md-4 col-lg-4 col-xl-3 mb-3">
            <div class="card" style="min-height: 550px">
                <img src="@Url.Content(path)" class="mt-1" style="max-height: 150px;max-width:100%; margin: 0 auto; display:block;" alt="Товар (@name)">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@name</h5>
                    <p class="card-text mb-auto">@LogicClass.print200Symbols(description, 150)</p>
                    @Html.ActionLink("Подробнее", "Details", "Product", new { id = ID }, new { @class = "btn btn-primary mt-auto" })
                    
                </div>
            </div>
        </div>
    }

    <div class="row">
        @foreach (var item in Model.Leaders)
        {
            @printLeaders((string)item.Name, (string)item.ImagePath, (string)item.Description, item.ProductId)
        }
    </div>

</div>
