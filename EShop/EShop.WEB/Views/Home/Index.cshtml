<h2 class="mt-3">Лидеры продаж</h2>




@helper printLeaders(string name)
{
    <div class="col-sm-6 col-md-4 col-lg-4 col-xl-3 mb-3">
        <div class="card" style="min-height: 290px">
            <img src="..." class="card-img-top" alt="...">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">@name</h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                <a href="#" class="btn btn-primary mt-auto">Переход куда-нибудь</a>
                @*@using (Html.BeginForm("AddToCart", "Cart"))
                {

                    @Html.HiddenFor(x => x.Product.ProductId)
                    @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                    <input type="submit" class="form-control btn-success mt-1 col-12" value="Add to cart" />

                }*@
            </div>
        </div>
    </div>
}

<div class="row">
    @foreach (var item in Model.Leaders)
    {
