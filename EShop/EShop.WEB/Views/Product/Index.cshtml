@model EShop.WEB.Models.IndexViewModel
@using EShop.WEB.HtmlHelpers
@{
    ViewBag.Title = "Index";
}

@*<div class="col-sm-6 col-md-4 col-lg-4 col-xl-3 mb-3">*@



    <div class="container-fluid">
        <div class="row">

            <div id="categories" class="col-xl-3 col-lg-3 col-md-3 col-sm-3" style="min-height: 400px">
                @Html.Action("Menu", "Nav")
            </div>
            <div class="col-xl-9 col-lg-9 col-md-9 col-sm-9 bg-light">
                <div class="row">
                    @foreach (var p in Model.Products)
                    {
                        @Html.Partial("ProductSummary", p)
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="container mb-3 mt-3">
        
            
            <div class="pagination pagination-sm justify-content-center">
                @Html.PageLinks(Model.PageInfo, x => Url.Action("Index",
                    new { page = x, category = Model.CurrentCategory }))
            </div>
        
    </div>
